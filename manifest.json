{
    "manifest_version": 2,
    "version": "0.0.0",
    "name": "UniWidget",
    "description": "Simple Home Page with Widgets for your Browser.",
    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    "background" : {
        "scripts": ["background.js"]
    },
    "permissions": [
      "storage"
    ],
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}